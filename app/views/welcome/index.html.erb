<div class="row"></div>
<div class="row"></div>
<div class="five columns song_search">
  <h1>Tunr</h1>
  <h3>Welcome <%= @current_listener.username %></h3>
  <form action="/songs/search" method="get">
    <input type="text" name="search_term" placeholder="...search for song">
    <input type="submit">
  </form>
</div>

<% @songs.each do |song| %>
<div>
  <img src="<%= song.artwork_url %>" alt="">
  <h3>
    <%= song.title %>
  </h3>
  <audio controls src="<%= song.preview_link %>"></audio>

  <form action="/songs/<%= song.id %>" method="post">
    <%= token_tag %>
    <input type="hidden" name="_method" value="delete">
    <button type="submit">
      <i class="fa fa-trash-o"></i>
    </button>
  </form>
</div>
<% end %>
